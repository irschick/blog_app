<p id="notice"><%= notice %></p>

<h1>Listing Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Headline</th>
      <th>Teaser</th>
      <th>Content</th>
      <th>String</th>
      <th>Author</th>
      <th>Dateposted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.headline %></td>
        <td><%= blog.teaser %></td>
        <td><%= blog.content %></td>
        <td><%= blog.string %></td>
        <td><%= blog.author_id %></td>
        <td><%= blog.datePosted %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
