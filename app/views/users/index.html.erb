<p id="notice"><%= notice %></p>
<div class="page-header">
  <h1>User Management <i class="fa fa-cog fa-1x"></i></h1>
</div>
<div class="container">
  <div class="row users">
    <div class="col-md-6">
      <div class="panel panel-primary">
        <div class="panel-heading users">
          <h3 class="panel-title">Users</h3>
          <div class="pull-right">
            <span class="clickable filter" data-toggle="tooltip" title="Toggle table filter" data-container="body">
              <i class="glyphicon glyphicon-filter"></i>
            </span>
          </div>
        </div>
        <div class="panel-body users">
          <input type="text" class="form-control" id="dev-table-filter" data-action="filter" data-filters="#dev-table" placeholder="Filter Users" />
        </div>
        <table class="table table-hover" id="dev-table">
          <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.first_name %> <%= user.last_name %> </td>
                <td><%= user.email %></td>
                <td><%= link_to 'Show', user %> <br> <%= link_to 'Edit', edit_user_path(user) %> <br>
                  <% if signed_in? && current_user.admin? %>
                   <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure you want to Delete this user?' } %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <% if signed_in? && current_user.admin? %>
    <div class="btn-group">
      <%= button_to 'New User', new_user_path, method: :get, class: 'btn btn-primary btn-xs' %>
    </div>
  <% end %>
</div>
