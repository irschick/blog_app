<p id="notice"><%= notice %></p>
<div class="page-header">
  <h1>View User <i class="fa fa-cog fa-1x"></i></h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          View User
          <div class="pull-right">
            <a href="/users">Users <i class="fa fa-cog" aria-hidden="true"></i></a>
            <%= link_to 'Edit', edit_user_path(@user) %>
          </div>
        </div>
        <div class="panel-body">
          <div class="field">
            <strong>First name:</strong>
            <%= @user.first_name %>
          </div>
          <div class="field">
            <strong>Last name:</strong>
            <%= @user.last_name %>
          </div>
          <div class="field">
            <strong>Email:</strong>
            <%= @user.email %>
          </div>
          <div class="field">
            <strong>Admin:</strong>
            <%= check_box_tag 'admin', '1', @user.admin?, :disabled => true%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
