<div class="page-header">
  <h1>Authors<i class="fa fa-child fa-1x"></i></h1>
</div>
<div class="container">
  <div class="row users">
    <div class="col-md-6">
      <div class="panel panel-primary">
        <div class="panel-heading users">
          <h3 class="panel-title">Users</h3>
          <div class="pull-right">
            <span class="clickable filter" data-toggle="tooltip" title="Toggle table filter" data-container="body">
              <i class="glyphicon glyphicon-filter"></i>
            </span>
          </div>
        </div>
        <div class="panel-body users">
          <input type="text" class="form-control" id="dev-table-filter" data-action="filter" data-filters="#dev-table" placeholder="Filter Authors" />
        </div>
        <table class="table table-hover" id="dev-table">
          <thead>
          <tr>
            <th>Author Name</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          <% @authors.each do |author| %>
              <tr>
                <td><%= author.name %></td>
                <td><%= link_to 'Show', author %> <br> <%= link_to 'Edit', edit_author_path(author) %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <% if signed_in? && current_user.admin? %>
      <div class="btn-group">
        <%= button_to 'New Author', new_author_path, method: :get, class: 'btn btn-primary btn-xs' %>
      </div>
  <% end %>
</div>



