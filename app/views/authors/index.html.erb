<p id="notice"><%= notice %></p>
<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('/assets/wall.jpg')">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1>Authors: Irschick Blog</h1>
          <hr class="small">
          <span class="subheading">Blogging for Product Managers</span>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12">
        <div class="row">
          <div class="col-xs-12">
            <div class="row">
              <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <% @authors.each do |author| %>
                    <div class="post-preview">
                      <%= link_to(author) do %>
                        <h2 class="post-title"><%= author.name %>
                        </h2>
                      <% end %>
                    </div>
                    <div>
                      <%= link_to 'View', author %>
                      <%= link_to 'Edit', edit_author_path(author) %>
                    </div>
                    <hr>
                <% end %>
                <ul class="pager">
                  <li class="next">
                    <%= link_to 'Add Author', new_author_path %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>





